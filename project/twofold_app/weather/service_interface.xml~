    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

  <query name="genre">
    <parameters>
      <parameter predicate="title_to_search" format="grammar_entry"/>
    </parameters>
    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

  <query name="ratings">
    <parameters>
      <parameter predicate="title_to_search" format="grammar_entry"/>
    </parameters>
    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

  <query name="episode_title">
    <parameters>
      <parameter predicate="show_to_search" format="grammar_entry"/>
      <parameter predicate="season_to_search" format="grammar_entry"/>
      <parameter predicate="episode_to_search" format="grammar_entry"/>
    </parameters>
    <target>
      <device_module device="WeatherDevice"/>
    </target>
  </query>

  <query name="episode_director">
    <parameters>
